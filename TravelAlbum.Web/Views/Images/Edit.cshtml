@model TravelAlbum.Web.Models.ImageModels.EditImageInputModel


@using (Html.BeginForm("Edit", "Images", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.bgTitle, htmlAttributes: new { @class = "control-label  col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.bgTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.bgTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.bgDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.bgDescription, 10, 800, htmlAttributes: new { @class = "form-control", @style = "max-width:100%" })
                @Html.ValidationMessageFor(model => model.bgDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.enTitle, htmlAttributes: new { @class = "control-label  col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.enTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.enTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.enDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.enDescription, 10, 800, htmlAttributes: new { @class = "form-control", @style = "max-width:100%" })
                @Html.ValidationMessageFor(model => model.enDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TravelObjectId, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.TravelObjectId, Model.TravelsDropDown, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TravelObjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(a => a.CreatedOn, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CreatedOn, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", value = Model.CreatedOn })
            </div>
        </div>       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@GlobalResources.CreateImageButtonLabel" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}