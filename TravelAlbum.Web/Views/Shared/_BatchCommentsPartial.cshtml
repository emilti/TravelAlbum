@model TravelAlbum.Web.Models.BatchCommentsModels.BatchCommentsViewModel

<div class="comments-page-body">
    @foreach (var comment in Model.Comments)
    {
        if (comment.IsDeleted == false)
        {
            <div>
                @{
                    @Html.Partial("_SingleCommentPartial", comment)
                }
            </div>
        }
    }
</div>

