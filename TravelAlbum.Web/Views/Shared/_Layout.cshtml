<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
   <link href="~/Content/nav-bar.css" rel="stylesheet" />

</head>
<body>

    <div class='topnav'>        
        <div class="content-menu">            
           @Html.ActionLink(Resources.GlobalResources.LabelAddTravel, "Add", "Travels")
        <a>test</a>
        </div>
       
        <div class="culture-menu">
        @Html.ActionLink(
                        "Bulgarian",
                        "RedirectLanguage",
                        "Culture",
                        new { language = "bg", query = Request.Url.PathAndQuery },
                        null)
        @Html.ActionLink(
                        "English",
                        "RedirectLanguage",
                        "Culture",
                        new { language = "en", query = Request.Url.PathAndQuery },
                        null)
        </div>
    </div>  
    <div class="container body-content">
        @RenderBody()

        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Travel catalog</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
